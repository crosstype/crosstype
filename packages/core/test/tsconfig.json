{
  "extends": "../../../tsconfig.base",

  "compilerOptions": {
    "types": [ "jest", "node" ],
    "noEmit": true,
    "incremental": false,

    "baseUrl": "../src",
    "paths": {
      "#ast": [ "ast", "../generated/ast" ],
      "#ast/*": [ "ast/*", "../generated/ast/*" ],
      "#language": [ "language" ],
      "#language/*": [ "language/*" ],
      "#options": [ "options" ],
      "#options/*": [ "options/*" ],
      "#main": [ "main" ],
      "#main/*": [ "main/*" ]
    }
  }
}
