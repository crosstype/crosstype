{
  "extends": "../../tsconfig.base",
  "include": [ "src" ],
  "exclude": [ "src/options/config" ],

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",

    "baseUrl": "src",
    "paths": {
      "#ast": [ "ast" ],
      "#ast/*": [ "ast/*" ],
      "#language": [ "language" ],
      "#language/*": [ "language/*" ],
      "#options": [ "options" ],
      "#options/*": [ "options/*" ],
      "#package": [ "package" ],
      "#package/*": [ "package/*" ]
    },

    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
//      {
//        "transform": "@crosstype/build-tools/dist/plugin.js",
